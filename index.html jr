    #total {
      font-weight: bold;
      text-align: center;
      margin: 20px 0;
      font-size: 18px;
    }
    #whatsappLink {
      display: block;
      width: 100%;
      text-align: center;
      background: #25D366;
      color: white;
      padding: 10px;
      text-decoration: none;
      border-radius: 5px;
      font-size: 16px;
    }
    #whatsappLink:hover {
      background: #1ebe5d;
    }
